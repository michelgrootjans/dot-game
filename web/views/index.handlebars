<h1>{{title}}</h1>

<form method="post" action="/games">
    <div class="row mb-3">
        <label for="task-1-name" class="col-sm-2 col-form-label">Task 1</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Task name" aria-label="Task 1" id="task-1-name" name="taskNames" aria-describedby="task-1-name" value="Backlog">
        </div>
    </div>

    <div class="row mb-3">
        <label for="task-2-name" class="col-sm-2 col-form-label">Task 2</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Task name" aria-label="Task 2" id="task-2-name" name="taskNames" aria-describedby="task-2-name" value="Analysis">
        </div>
    </div>

    <div class="row mb-3">
        <label for="task-3-name" class="col-sm-2 col-form-label">Task 3</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Task name" aria-label="Task 3" id="task-3-name" name="taskNames" aria-describedby="task-3-name" value="Development">
        </div>
    </div>

    <div class="row mb-3">
        <label for="task-4-name" class="col-sm-2 col-form-label">Task 4</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Task name" aria-label="Task 4" id="task-4-name" name="taskNames" aria-describedby="task-4-name" value="Ops">
        </div>
    </div>

    <div class="row mb-3">
        <label for="task-5-name" class="col-sm-2 col-form-label">Task 5</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Task name" aria-label="Task 5" id="task-5-name" name="taskNames" aria-describedby="task-5-name" value="QA">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Start a new dot-game</button>
</form>
